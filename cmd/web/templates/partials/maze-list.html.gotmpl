<ul>
  {{ range $index, $maze := .Mazes }}
    <li x-data="{ show: false }" class="relative">
      <a href="#" 
        @mouseenter="show = true"
        @mouseleave="show = false"
      >Level {{ $index }}</a>
      <div
        class="tooltip"
        x-show="show"
        hx-get="/mazes/{{$index}}/minimap" 
        hx-trigger="intersect once"
        hx-swap="afterbegin"
      >
      </div>
    </li>
  {{ end }}
</ul>
